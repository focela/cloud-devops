# GitLab Port Configuration
# The HTTP and SSH access ports for GitLab. Customize if necessary.
GITLAB_HTTP_PORT=10080
GITLAB_SSH_PORT=10022

# PostgreSQL Database Configuration
# Credentials for GitLab's PostgreSQL database. Adjust as needed.
DB_USER=gitlab               # Database username for GitLab
DB_NAME=gitlabhq_production   # Database name for GitLab

# Redis Configuration
# Redis host and port configuration. Leave default unless changed.
REDIS_HOST=gitlab-redis       # Redis hostname
REDIS_PORT=6379               # Redis default port

# Timezone Configuration
# Set the timezone for both the system and GitLab.
TZ=UTC                        # System timezone
GITLAB_TIMEZONE=UTC           # GitLab application timezone

# HTTPS/SSL Configuration
# Enable HTTPS and specify if you're using a self-signed certificate.
GITLAB_HTTPS=false            # Enable HTTPS (true/false)
SSL_SELF_SIGNED=false         # Use self-signed certificate (true/false)

# GitLab General Configuration
# Configure the GitLab host and the base URL if not running on the root URL.
GITLAB_HOST=localhost         # Hostname for GitLab (use domain or IP)
GITLAB_RELATIVE_URL_ROOT=     # Set this if GitLab is running under a relative URL

# GitLab Secret Keys
# Replace these with long, random, alphanumeric strings for security.
GITLAB_SECRETS_DB_KEY_BASE=long-and-random-alphanumeric-string
GITLAB_SECRETS_SECRET_KEY_BASE=long-and-random-alphanumeric-string
GITLAB_SECRETS_OTP_KEY_BASE=long-and-random-alphanumeric-string

# GitLab Admin Account Configuration
# Initial credentials for the GitLab root admin account.
GITLAB_ROOT_PASSWORD=your_root_password  # GitLab admin password
GITLAB_ROOT_EMAIL=admin@example.com      # GitLab admin email

# GitLab Notification Configuration
# Control email notifications for broken builds and code pushers.
GITLAB_NOTIFY_ON_BROKEN_BUILDS=true  # Notify on broken builds
GITLAB_NOTIFY_PUSHER=false           # Disable pusher notifications

# GitLab Email Configuration
# Configure the sender and reply-to addresses for outgoing emails.
GITLAB_EMAIL=notifications@example.com
GITLAB_EMAIL_REPLY_TO=noreply@example.com
GITLAB_INCOMING_EMAIL_ADDRESS=reply@example.com

# GitLab Backup Schedule
# Set the backup frequency and time for GitLab.
GITLAB_BACKUP_SCHEDULE=daily         # Backup schedule (daily, weekly, etc.)
GITLAB_BACKUP_TIME=01:00             # Backup time in HH:MM format

# SMTP Email Server Configuration
# SMTP settings for outgoing emails. Fill in with your actual email server details.
SMTP_ENABLED=false                    # Enable SMTP for sending emails (true/false)
SMTP_DOMAIN=www.example.com           # Domain for email sending
SMTP_HOST=smtp.gmail.com              # SMTP server hostname
SMTP_PORT=587                         # SMTP port (use 587 for STARTTLS)
SMTP_USER=mailer@example.com          # SMTP user email
SMTP_STARTTLS=true                    # Use STARTTLS for encryption (true/false)
SMTP_AUTHENTICATION=login             # SMTP authentication method (login, plain)

# IMAP Email Server Configuration
# IMAP settings for incoming emails (optional). Customize if IMAP is enabled.
IMAP_ENABLED=false                   # Enable IMAP for incoming emails (true/false)
IMAP_HOST=imap.gmail.com             # IMAP server hostname
IMAP_PORT=993                        # IMAP port (use 993 for SSL)
IMAP_USER=mailer@example.com         # IMAP user email
IMAP_SSL=true                        # Use SSL for IMAP (true/false)
IMAP_STARTTLS=false                  # Use STARTTLS for IMAP (true/false)
