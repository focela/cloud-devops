# Example terraform.tfvars for Security Groups

# VPC ID where the security groups will be applied
vpc_id = "vpc-xxxxxxxx"

# List of allowed CIDR blocks for inbound traffic (adjust based on security requirements)
# Replace "x.x.x.x/32" with your trusted IP ranges or use "0.0.0.0/0" for open access (not recommended for production)
allowed_cidr_blocks = ["x.x.x.x/32"]

# Example: For open access (testing only)
# allowed_cidr_blocks = ["0.0.0.0/0"]

# Replace with the actual security group IDs, if needed (for specific integrations)
vpc_security_group_ids = ["sg-xxxxxxxx", "sg-yyyyyyyy"]
